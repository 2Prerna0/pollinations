name = "pollinations-image-cache"
main = "src/index.js"
compatibility_date = "2023-05-18"
# The account_id should be set as a secret using wrangler
# wrangler secret put ACCOUNT_ID

# R2 bucket for image storage
[[r2_buckets]]
binding = "IMAGE_BUCKET"
bucket_name = "pollinations-images"

# Environment variables
[vars]
ORIGIN_HOST = "image-origin.pollinations.ai"
# Sensitive values should be set using Wrangler's secret feature:
# wrangler secret put GA_MEASUREMENT_ID
# wrangler secret put GA_API_SECRET
DEBUG_ANALYTICS = "false"  # Set to "true" to enable detailed analytics debugging

# Increase limits for long-running operations
# This requires a paid Workers Unbound plan
[limits]
cpu_ms = 30000  # 30 seconds CPU time (max for Workers Unbound)

# Configure logging
[observability.logs]
enabled = true

# Note: Workers Unbound is now configured via account settings in the dashboard

# ===========================================
# SECRETS SETUP INSTRUCTIONS
# ===========================================
# This configuration relies on secrets that should NOT be committed to the repository.
# Use one of the following methods to set up your environment:
#
# 1. Use the provided scripts (recommended):
#    ./configure-env.sh
#    ./deploy-with-secrets.sh
#
# 2. Manually set up secrets:
#    wrangler secret put ACCOUNT_ID
#    wrangler secret put GA_MEASUREMENT_ID
#    wrangler secret put GA_API_SECRET
# =========================================== 
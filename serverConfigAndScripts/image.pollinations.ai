server {
    listen 80;
    listen [::]:80;

    server_name image.pollinations.ai;

    # This location block forwards all requests to the local web server on port 16384
    location / {
        proxy_pass http://localhost:16384; # Proxy to the local web server
        proxy_http_version 1.1;
        proxy_set_header Connection '';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # SSE-specific settings
        proxy_buffering off;
        proxy_cache off;
        proxy_read_timeout 12h; # Extend timeout for long-lived SSE connections
        add_header Cache-Control no-cache; # Disable caching for SSE responses
        add_header 'Access-Control-Allow-Origin' '*' always; # Adjust CORS if needed

        # Disable buffering for the response, necessary for SSE
    }

    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/image.pollinations.ai/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/image.pollinations.ai/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

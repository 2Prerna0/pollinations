{
  "schema_version": "1.0.0",
  "metadata": {
    "title": "Pollinations.AI",
    "description": "Free and open-source API for text, image, and audio generation with no signups or API keys required",
    "version": "1.0.0",
    "contact": {
      "name": "Pollinations.AI Team",
      "url": "https://discord.gg/k9F7SyTgqn"
    },
    "license": {
      "name": "MIT",
      "url": "https://github.com/pollinations/pollinations/blob/master/LICENSE"
    }
  },
  "services": [
    {
      "name": "Image Generation",
      "description": "Generate images from text prompts",
      "endpoint": "https://image.pollinations.ai/prompt/{prompt}",
      "method": "GET",
      "parameters": [
        {
          "name": "prompt",
          "description": "Text description of the image to generate",
          "required": true,
          "type": "string",
          "in": "path"
        },
        {
          "name": "model",
          "description": "Model to use for generation",
          "required": false,
          "type": "string",
          "default": "flux",
          "in": "query"
        },
        {
          "name": "seed",
          "description": "Seed for reproducible results",
          "required": false,
          "type": "integer",
          "in": "query"
        },
        {
          "name": "width",
          "description": "Width of the generated image",
          "required": false,
          "type": "integer",
          "default": 1024,
          "in": "query"
        },
        {
          "name": "height",
          "description": "Height of the generated image",
          "required": false,
          "type": "integer",
          "default": 1024,
          "in": "query"
        },
        {
          "name": "nologo",
          "description": "Turn off the rendering of the logo",
          "required": false,
          "type": "boolean",
          "default": false,
          "in": "query"
        },
        {
          "name": "enhance",
          "description": "Turn on prompt enhancing",
          "required": false,
          "type": "boolean",
          "default": false,
          "in": "query"
        },
        {
          "name": "safe",
          "description": "Enable strict NSFW content filtering",
          "required": false,
          "type": "boolean",
          "default": false,
          "in": "query"
        },
        {
          "name": "private",
          "description": "Prevent the image from appearing in the public feed",
          "required": false,
          "type": "boolean",
          "default": false,
          "in": "query"
        },
        {
          "name": "referrer",
          "description": "Referrer URL/Identifier for tracking and Special Bee program",
          "required": false,
          "type": "string",
          "in": "query"
        }
      ],
      "response": {
        "type": "image",
        "format": "jpeg/png"
      },
      "examples": [
        {
          "description": "Generate an image of a sunset",
          "request": "https://image.pollinations.ai/prompt/A%20beautiful%20sunset%20over%20the%20ocean?width=1280&height=720&seed=42"
        },
        {
          "description": "Generate an enhanced image with a specific model",
          "request": "https://image.pollinations.ai/prompt/Cyberpunk%20city%20at%20night?model=sdxl&enhance=true&width=1024&height=1024"
        }
      ]
    },
    {
      "name": "Text Generation (GET)",
      "description": "Generate text from prompts",
      "endpoint": "https://text.pollinations.ai/{prompt}",
      "method": "GET",
      "parameters": [
        {
          "name": "prompt",
          "description": "Text prompt for the AI to respond to",
          "required": true,
          "type": "string",
          "in": "path"
        },
        {
          "name": "model",
          "description": "Model to use for text generation",
          "required": false,
          "type": "string",
          "default": "openai",
          "in": "query"
        },
        {
          "name": "seed",
          "description": "Seed for reproducible results",
          "required": false,
          "type": "integer",
          "in": "query"
        },
        {
          "name": "json",
          "description": "Receive response in JSON format",
          "required": false,
          "type": "boolean",
          "default": false,
          "in": "query"
        },
        {
          "name": "system",
          "description": "System prompt to set the behavior of the AI",
          "required": false,
          "type": "string",
          "in": "query"
        },
        {
          "name": "stream",
          "description": "Enable streaming responses via Server-Sent Events (SSE)",
          "required": false,
          "type": "boolean",
          "default": false,
          "in": "query"
        },
        {
          "name": "private",
          "description": "Prevent the response from appearing in the public feed",
          "required": false,
          "type": "boolean",
          "default": false,
          "in": "query"
        },
        {
          "name": "referrer",
          "description": "Referrer URL/Identifier for tracking and Special Bee program",
          "required": false,
          "type": "string",
          "in": "query"
        }
      ],
      "response": {
        "type": "text",
        "format": "plain/json/stream"
      },
      "examples": [
        {
          "description": "Generate text about AI",
          "request": "https://text.pollinations.ai/What%20is%20artificial%20intelligence?model=mistral&seed=42"
        },
        {
          "description": "Generate text with a system prompt",
          "request": "https://text.pollinations.ai/Write%20a%20short%20poem?system=You%20are%20a%20poet&model=claude"
        },
        {
          "description": "Generate streaming text response",
          "request": "https://text.pollinations.ai/Tell%20me%20a%20story?stream=true"
        }
      ]
    },
    {
      "name": "Audio Generation (GET)",
      "description": "Generate audio from text using text-to-speech",
      "endpoint": "https://text.pollinations.ai/{prompt}",
      "method": "GET",
      "parameters": [
        {
          "name": "prompt",
          "description": "Text to convert to speech",
          "required": true,
          "type": "string",
          "in": "path"
        },
        {
          "name": "model",
          "description": "Model to use for audio generation (must be 'openai-audio')",
          "required": true,
          "type": "string",
          "default": "openai-audio",
          "in": "query"
        },
        {
          "name": "voice",
          "description": "Voice to use for text-to-speech",
          "required": false,
          "type": "string",
          "default": "nova",
          "enum": ["alloy", "echo", "fable", "onyx", "nova", "shimmer"],
          "in": "query"
        },
        {
          "name": "private",
          "description": "Prevent the audio from appearing in the public feed",
          "required": false,
          "type": "boolean",
          "default": false,
          "in": "query"
        },
        {
          "name": "referrer",
          "description": "Referrer URL/Identifier for tracking and Special Bee program",
          "required": false,
          "type": "string",
          "in": "query"
        }
      ],
      "response": {
        "type": "audio",
        "format": "mp3"
      },
      "examples": [
        {
          "description": "Generate audio with default voice",
          "request": "https://text.pollinations.ai/Welcome%20to%20Pollinations?model=openai-audio"
        },
        {
          "description": "Generate audio with specific voice",
          "request": "https://text.pollinations.ai/This%20is%20a%20demonstration%20of%20text%20to%20speech?model=openai-audio&voice=alloy"
        }
      ]
    },
    {
      "name": "Text Generation (POST)",
      "description": "Generate text using a POST request with messages",
      "endpoint": "https://text.pollinations.ai/openai",
      "method": "POST",
      "requestBody": {
        "content": "application/json",
        "schema": {
          "type": "object",
          "required": ["messages"],
          "properties": {
            "messages": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["role", "content"],
                "properties": {
                  "role": {
                    "type": "string",
                    "enum": ["system", "user", "assistant"]
                  },
                  "content": {
                    "type": "string"
                  }
                }
              }
            },
            "model": {
              "type": "string",
              "default": "openai"
            },
            "seed": {
              "type": "integer"
            },
            "jsonMode": {
              "type": "boolean",
              "default": false
            },
            "stream": {
              "type": "boolean",
              "default": false
            },
            "private": {
              "type": "boolean",
              "default": false
            },
            "referrer": {
              "type": "string"
            },
            "tools": {
              "type": "array",
              "items": {
                "type": "object"
              }
            },
            "tool_choice": {
              "type": "object"
            },
            "response_format": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["json_object", "text"]
                }
              }
            }
          }
        }
      },
      "response": {
        "type": "json",
        "schema": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "object": {
              "type": "string"
            },
            "created": {
              "type": "integer"
            },
            "model": {
              "type": "string"
            },
            "choices": {
              "type": "array",
              "items": {
                "type": "object"
              }
            }
          }
        }
      },
      "examples": [
        {
          "description": "Basic chat completion",
          "request": {
            "method": "POST",
            "url": "https://text.pollinations.ai/openai",
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "model": "openai",
              "messages": [
                {"role": "system", "content": "You are a helpful assistant."},
                {"role": "user", "content": "What is the weather like in Paris today?"}
              ]
            }
          }
        },
        {
          "description": "Streaming chat completion",
          "request": {
            "method": "POST",
            "url": "https://text.pollinations.ai/openai",
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "model": "mistral",
              "messages": [
                {"role": "user", "content": "Write a poem about the sea"}
              ],
              "stream": true
            }
          }
        },
        {
          "description": "Vision capability with image input",
          "request": {
            "method": "POST",
            "url": "https://text.pollinations.ai/openai",
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "model": "openai-large",
              "messages": [
                {"role": "user", "content": [
                  {"type": "text", "text": "What's in this image?"},
                  {"type": "image_url", "image_url": {"url": "https://example.com/image.jpg"}}
                ]}
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Audio Generation (POST)",
      "description": "Generate audio using a POST request with text",
      "endpoint": "https://text.pollinations.ai/openai",
      "method": "POST",
      "requestBody": {
        "content": "application/json",
        "schema": {
          "type": "object",
          "required": ["model", "messages"],
          "properties": {
            "model": {
              "type": "string",
              "enum": ["openai-audio"],
              "default": "openai-audio"
            },
            "messages": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["role", "content"],
                "properties": {
                  "role": {
                    "type": "string",
                    "enum": ["user"]
                  },
                  "content": {
                    "type": "string"
                  }
                }
              }
            },
            "voice": {
              "type": "string",
              "enum": ["alloy", "echo", "fable", "onyx", "nova", "shimmer"],
              "default": "nova"
            },
            "private": {
              "type": "boolean",
              "default": false
            },
            "referrer": {
              "type": "string"
            }
          }
        }
      },
      "response": {
        "type": "audio",
        "format": "mp3"
      },
      "examples": [
        {
          "description": "Generate audio with POST request",
          "request": {
            "method": "POST",
            "url": "https://text.pollinations.ai/openai",
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "model": "openai-audio",
              "messages": [
                {"role": "user", "content": "Convert this longer text into speech using the selected voice. This method is better for larger inputs."}
              ],
              "voice": "nova"
            }
          }
        }
      ]
    },
    {
      "name": "Speech-to-Text (POST)",
      "description": "Transcribe audio to text",
      "endpoint": "https://text.pollinations.ai/openai",
      "method": "POST",
      "requestBody": {
        "content": "application/json",
        "schema": {
          "type": "object",
          "required": ["model", "messages"],
          "properties": {
            "model": {
              "type": "string",
              "enum": ["openai-audio"],
              "default": "openai-audio"
            },
            "messages": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["role", "content"],
                "properties": {
                  "role": {
                    "type": "string",
                    "enum": ["user"]
                  },
                  "content": [
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "enum": ["text"]
                        },
                        "text": {
                          "type": "string"
                        }
                      }
                    },
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "enum": ["audio_url"]
                        },
                        "audio_url": {
                          "type": "object",
                          "properties": {
                            "url": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  ]
                }
              }
            },
            "private": {
              "type": "boolean",
              "default": false
            },
            "referrer": {
              "type": "string"
            }
          }
        }
      },
      "response": {
        "type": "json",
        "schema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string"
            }
          }
        }
      },
      "examples": [
        {
          "description": "Transcribe audio to text",
          "request": {
            "method": "POST",
            "url": "https://text.pollinations.ai/openai",
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "model": "openai-audio",
              "messages": [
                {
                  "role": "user",
                  "content": [
                    {
                      "type": "text",
                      "text": "Transcribe this audio file"
                    },
                    {
                      "type": "audio_url",
                      "audio_url": {
                        "url": "https://example.com/audio.mp3"
                      }
                    }
                  ]
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "List Available Models",
      "description": "Get a list of available models for image or text generation",
      "endpoint": "https://image.pollinations.ai/models",
      "method": "GET",
      "response": {
        "type": "json",
        "schema": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "examples": [
        {
          "description": "List available image models",
          "request": "https://image.pollinations.ai/models"
        },
        {
          "description": "List available text models",
          "request": "https://text.pollinations.ai/models"
        }
      ]
    }
  ]
}

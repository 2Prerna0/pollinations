        "@tanstack/react-router": "^1.131.36",
        "better-auth": "^1.3.9",
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "drizzle-orm": "^0.44.5",
        "hono": "^4.9.6",
        "hono-pino": "^0.10.2",
        "jose": "^5.10.0",
        "nanoid": "^5.1.5",
        "pino": "^9.9.4",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "tailwind-merge": "^3.3.1",

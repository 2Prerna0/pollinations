        "@types/node": "^24.3.1",
        "@types/pino": "^7.0.4",
        "@types/react": "^19.1.12",
        "@types/react-dom": "^19.1.9",
        "@vitejs/plugin-react": "^5.0.2",
        "drizzle-kit": "^0.31.4",
